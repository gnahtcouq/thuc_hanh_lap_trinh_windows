@model TranVanQuocThang_DH52007101_D20_TH11.Models.Sach

@{ Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản lý danh mục sách</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>QUẢN LÍ DANH MỤC SÁCH</h2>
        <p>
            <a asp-action="Them" class="btn btn-primary">Thêm mới</a>
        </p>
        <table class="table table-bordered">
            <tr>
                <th><label asp-for="TenSach" class="form-label"></label></th>
                <th><label asp-for="NgayXb" class="form-label"></label></th>
                <th><label asp-for="Gia" class="form-label"></label></th>
                <th><label asp-for="MaLoai" class="form-label"></label></th>
                <th>Tác vụ</th>
            </tr>
            @{
                foreach (var item in ViewBag.sach) {
                    //foreach (var item in Model)
                    <tr>
                        <td>@item.TenSach</td>
                        <td>@item.NgayXb.ToString("dd/MM/yyyy")</td>
                        <td>@item.Gia</td>
                        <td>@item.MaLoai</td>
                        <td>
                            @*<a href="@Url.Action("sua","Nhasanxuat",new { id = item.Mansx })">Sửa</a> |*@
                            <a asp-action="sua" asp-route-id="@item.MaSach" class="btn btn-success">Sửa</a>
                            @*<a href="@Url.Action("xoa","Nhasanxuat",new { id = item.Mansx })">Xóa</a>*@
                            <a asp-action="xoa" asp-route-id="@item.MaSach" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </table>

    </div>
</body>
</html>
