@model TranVanQuocThang_DH52007101_D20_TH11.Models.Laptop

@{ Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản lý danh mục laptop</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>QUẢN LÍ DANH MỤC LAPTOP</h2>
        <div style="display: flex; grid-gap: 10px;">
            <p>
                <a asp-action="Them" class="btn btn-primary">Thêm mới</a>
            </p>
            <p>
                <a asp-controller="Laptop" asp-action="QuanLyHoaDon" class="btn btn-primary">Quản lý Hoá đơn</a>
            </p>
        </div>
        <table class="table table-bordered">
            <tr>
                <th><label asp-for="MaLaptop" class="form-label"></label></th>
                <th><label asp-for="TenLaptop" class="form-label"></label></th>
                <th><label asp-for="NgaySx" class="form-label"></label></th>
                <th><label asp-for="DonGia" class="form-label"></label></th>
                <th><label asp-for="MoTa" class="form-label"></label></th>
                <th><label asp-for="MaNsx" class="form-label"></label></th>
                <th>Tác vụ</th>
            </tr>
            @{
                foreach (var item in ViewBag.laptop) {
                    //foreach (var item in Model)
                    <tr>
                        <td>@item.MaLaptop</td>
                        <td>@item.TenLaptop</td>
                        <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>
                        <td>@item.DonGia</td>
                        <td>@item.MoTa</td>
                        <td>@item.MaNsx</td>
                        <td>
                            <a asp-action="sua" asp-route-id="@item.MaLaptop" class="btn btn-success">Sửa</a> |
                            <a asp-action="xoa" asp-route-id="@item.MaLaptop" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </table>

    </div>
</body>
</html>
