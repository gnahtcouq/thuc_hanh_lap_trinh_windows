@model DH52007101.Models.Loaihanghoa

@{ Layout = "~/Views/_LayoutPage1.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xoá loại hàng hoá</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        @{
            if (ViewBag.flagDelete == true) {
                <h2>Xóa thông tin loại hàng hoá</h2>
                <h3>Bạn muốn xóa loại hàng hoá này?</h3>
            } else {
                <h3>Bạn không thể xóa loại hàng hoá này</h3>
            }
        }
        <form method="post">
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th><label asp-for="Tenloai" class="form-label"></label></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input type="hidden" name="maloai" value="@Model.Maloai" />
                                <label asp-for="Tenloai">@Model.Tenloai</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            @{
                if (ViewBag.flagDelete == true) {
                    <div class="form-group">
                        <input type="submit" value="Xóa" class="btn btn-primary" /><br /><br />
                    </div>
                }
            }

            <div>
                <a asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>