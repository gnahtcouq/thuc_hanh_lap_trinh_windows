@model DH52007101.Models.Loaihanghoa

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa thông tin loại hàng hoá</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <form asp-action="Sua" method="post">
            <div class="form-horizontal">
                <h2>Sửa thông tin loại hàng hoá</h2>
                @{
                    Loaihanghoa n = ViewBag.lhh;
                }
                <div class="form-group">
                    @*name trùng với tên field được binding*@
                    <input name="Maloai" type="hidden" value="@n.Maloai" maxlength="50" /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Tenloai" class="form-label"></label>
                    <input asp-for="Tenloai" class="form-control" />
                    <span asp-validation-for="Tenloai" class="text-danger"></span><br />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Lưu</button><br /><br />
                </div>

                <div>
                    <a asp-action="Index">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
