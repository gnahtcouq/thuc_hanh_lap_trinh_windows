@model DH52007101.Models.Nhanvien

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa thông tin nhân viên</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <form action="Sua" method="post">
            <div class="form-horizontal">
                <h2>Sửa thông tin nhân viên</h2>
                @{
                    Nhanvien n = ViewBag.nv;
                }
                <div class="form-group">
                    @*name trùng với tên field được binding*@
                    <input name="manv" type="hidden" value="@n.Manv" maxlength="50" /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Tennv" class="form-label"></label>
                    <input asp-for="Tennv" class="form-control" />
                    <span asp-validation-for="Tennv" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Ngaysinh" class="form-label"></label>
                    <input asp-for="Ngaysinh" class="form-control" type="date" />
                    <span asp-validation-for="Ngaysinh" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Phai" class="form-label"></label>
                    <input type="radio" asp-for="Phai" value="true" checked="@(Model.Phai == true ? "checked" : null)"> Nam
                    <input type="radio" asp-for="Phai" value="false" checked="@(Model.Phai == false ? "checked" : null)"> Nữ
                    <span asp-validation-for="Phai" class="text-danger"></span><br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Diachi" class="form-label"></label>
                    <input asp-for="Diachi" class="form-control" />
                    <span asp-validation-for="Diachi" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Lưu</button><br /><br />
                </div>

                <div>
                    <a asp-action="Index">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
