@model DH52007101.Models.Nhanvien

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xoá nhân viên</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Xóa thông tin nhân viên</h2>
        <h3>Bạn muốn xóa nhân viên này ?</h3>
        <form method="post">
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th><label asp-for="Tennv" class="form-label"></label></th>
                            <th><label asp-for="Ngaysinh" class="form-label"></label></th>
                            <th><label asp-for="Phai" class="form-label"></label></th>
                            <th><label asp-for="Diachi" class="form-label"></label></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @{
                                Nhanvien n = ViewBag.nv;
                            }
                            <td>
                                <input type="hidden" name="manv" value="@n.Manv" />
                                <label asp-for="Tennv">@n.Tennv</label>
                            </td>
                            <td>
                                <label asp-for="Ngaysinh">@n.Ngaysinh?.ToString("dd/MM/yyyy")</label>
                            </td>
                            <td>
                                @if (n.Phai == true) {
                                    <label asp-for="Phai">Nam</label>
                                } else {
                                    <label asp-for="Phai">Nữ</label>
                                }
                            </td>
                            <td>
                                <label asp-for="Diachi">@n.Diachi</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-primary" /><br /><br />
            </div>

            <div>
                @*<a href="@Url.Action("index")">Quay lại</a>*@
                <a asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>