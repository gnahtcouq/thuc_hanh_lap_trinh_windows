@model DH52007101.Models.Khachhang

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm khách hàng</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <form action="Them" method="post">
            <h2>Thêm khách hàng</h2>
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Makh" class="form-label"></label>
                    <input asp-for="Makh" class="form-control" />
                    <span asp-validation-for="Makh" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Tenkh" class="form-label"></label>
                    <input asp-for="Tenkh" class="form-control" />
                    <span asp-validation-for="Tenkh" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Namsinh" class="form-label"></label>
                    <input asp-for="Namsinh" class="form-control" />
                    <span asp-validation-for="Namsinh" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Phai" class="form-label"></label>
                    <input type="radio" asp-for="Phai" value="true" /> Nam
                    <input type="radio" asp-for="Phai" value="false" /> Nữ
                    <span asp-validation-for="Phai" class="text-danger"></span><br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Dienthoai" class="form-label"></label>
                    <input asp-for="Dienthoai" class="form-control" />
                    <span asp-validation-for="Dienthoai" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Diachi" class="form-label"></label>
                    <input asp-for="Diachi" class="form-control" />
                    <span asp-validation-for="Diachi" class="text-danger"></span><br />
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                </div>


                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Lưu</button><br /><br />
                </div>

                <div>
                    <a asp-action="Index">Quay lại</a>
                </div>
        </form>
    </div>
</body>
</html>
