@model DH52007101.Models.Khachhang

@{
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông tin các khách hàng</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Quản lí khách hàng</h2>
        <p>
            @*<a href="@Url.Action("them")">Thêm mới</a>*@
            <a asp-action="them" class="btn btn-primary">Thêm mới</a>
        </p>

        <table class="table table-bordered">
            <tr>
                <th><label asp-for="Makh" class="form-label"></label></th>
                <th><label asp-for="Tenkh" class="form-label"></label></th>
                <th><label asp-for="Namsinh" class="form-label"></label></th>
                <th><label asp-for="Phai" class="form-label"></label></th>
                <th><label asp-for="Dienthoai" class="form-label"></label></th>
                <th><label asp-for="Diachi" class="form-label"></label></th>
                <th><label asp-for="Password" class="form-label"></label></th>
                <th>Tác vụ</th>
            </tr>
            @{
                foreach (var item in ViewBag.kh) {
                    <tr>
                        <td>@item.Makh</td>
                        <td>@item.Tenkh</td>
                        <td>@item.Namsinh</td>
                        <td>
                            @if (item.Phai) {
                                <p>Nam</p>
                            } else {
                                <p>Nữ</p>
                            }
                        </td>
                        <td>@item.Dienthoai</td>
                        <td>@item.Diachi</td>
                        <td>@item.Password</td>
                        <td>
                            @*<a href="@Url.Action("sua","Khachhang",new { id = item.Makh })">Sửa</a>*@
                            <a asp-action="sua" asp-route-id="@item.Makh" class="btn btn-success">Sửa</a> |
                            @*<a href="@Url.Action("xoa","Khachhang",new { id = item.Makh })">Xóa</a>*@
                            <a asp-action="xoa" asp-route-id="@item.Makh" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</body>
</html>
