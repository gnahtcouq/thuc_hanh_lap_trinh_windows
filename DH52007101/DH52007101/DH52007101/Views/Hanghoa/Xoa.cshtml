@model DH52007101.Models.Hanghoa

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xoá hàng hoá</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Xóa thông tin hàng hóa</h2>
        <h3>Bạn muốn xóa hàng hóa này ?</h3>
        <form method="post">
            <div class="form-group">
                <table class="table">
                    <tr>
                        <th>Tên hàng hóa</th>
                    </tr>
                    <tr>
                        @{
                            Hanghoa n = ViewBag.hh;
                        }
                        <td>
                            <input name="mahang" type="hidden" value="@n.Mahang" />
                            <label asp-for="Tenhang" class="form-label">@n.Tenhang</label>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-primary" /><br /><br />
            </div>

            <div>
                <a asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>