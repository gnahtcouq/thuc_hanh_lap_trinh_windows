@model DH52007101.Models.Hanghoa

@{
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông tin các hàng hoá</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Quản lí hàng hoá</h2>
        <p>
            @*<a href="@Url.Action("them")">Thêm mới</a>*@
            <a asp-action="them" class="btn btn-primary">Thêm mới</a>
        </p>

        <table class="table table-bordered">
            <tr>
                <th><label asp-for="Tenhang" class="form-label"></label></th>
                <th><label asp-for="Donvitinh" class="form-label"></label></th>
                <th><label asp-for="Dongia" class="form-label"></label></th>
                <th><label asp-for="Maloai" class="form-label"></label></th>
                <th><label asp-for="Mansx" class="form-label"></label></th>
                <th>Tác vụ</th>
            </tr>
            @{
                foreach (var item in ViewBag.hh) {
                    <tr>
                        <td>@item.Tenhang</td>
                        <td>@item.Donvitinh</td>
                        <td>@item.Dongia</td>
                        <td>@item.Maloai</td>
                        <td>@item.Mansx</td>
                        <td>
                            <a asp-action="sua" asp-route-id="@item.Mahang" class="btn btn-success">Sửa</a>
                            <a asp-action="xoa" asp-route-id="@item.Mahang" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </table>
</body>
</html>